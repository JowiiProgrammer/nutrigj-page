---
import Layout from '../layouts/Layout.astro';

const title = 'Página no encontrada - NutriGJ';
const description = 'La página que estás buscando no existe.';
---

<Layout title={title} description={description}>
  <main class="flex flex-col items-center justify-center h-screen bg-white px-4">
    <h1 class="text-6xl font-bold mb-4">404</h1>
    <p class="text-2xl mb-8">Oops, parece que te has perdido.</p>
    <a href="/" class="btn bg-secondary-color hover:bg-[#8eaf0f] text-white font-medium py-2 px-4 rounded transition-colors duration-300">
      Volver al inicio
    </a>
  </main>
</Layout>

<style>
    main {
        color: black;
    }
</style>