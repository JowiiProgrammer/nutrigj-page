---
import Logo from "../icons/Logo.astro"
---

<header class="bg-white shadow-md sticky top-0 z-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex justify-between items-center py-4">
    <!-- Logo and Brand -->
    <a href="/" class="flex items-center">
      <Logo alt="NutriGJ" class="h-8 w-auto mr-2" />
      <span class="text-2xl font-bold text-gray-800 transition-colors duration-300 ease-in-out hover:text-primary-color">NutriGJ</span>
    </a>

    <!-- Navigation -->
    <nav class="hidden md:flex space-x-4">
      <a href="#servicios" class="text-gray-600 font-medium transition-colors duration-300 ease-in-out hover:text-secondary-color">Servicios</a>
      <a href="#blog" class="text-gray-600 font-medium transition-colors duration-300 ease-in-out hover:text-secondary-color">Blog</a>
      <a href="#sobre-mi" class="text-gray-600 font-medium transition-colors duration-300 ease-in-out hover:text-secondary-color">Sobre mí</a>
      <a href="#contacto" class="text-gray-600 font-medium transition-colors duration-300 ease-in-out hover:text-secondary-color">Contacto</a>
    </nav>

    <!-- Mobile Menu Toggle -->
    <button id="mobile-menu-button" class="md:hidden text-gray-600 hover:text-gray-800 focus:outline-none">
      <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
      </svg>
    </button>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="md:hidden bg-white shadow-md px-4 py-2 hidden">
    <a href="#servicios" class="block text-gray-600 font-medium py-2 transition-colors duration-300 ease-in-out hover:text-secondary-color">
        Servicios
    </a>
    <a href="#blog" class="block text-gray-600 font-medium py-2 transition-colors duration-300 ease-in-out hover:text-secondary-color">
        Blog
    </a>
    <a href="#sobre-mi" class="block text-gray-600 font-medium py-2 transition-colors duration-300 ease-in-out hover:text-secondary-color">
        Sobre mí
    </a>
    <a href="#contacto" class="block text-gray-600 font-medium py-2 transition-colors duration-300 ease-in-out hover:text-secondary-color">
        Contacto
    </a>
  </div>
</header>

<script>
  // Toggle mobile menu
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  mobileMenuButton.addEventListener('click', () => {
    mobileMenu.classList.toggle('hidden');
  });
</script>

<style>
    :root {
        --primary-color: #1d938b;
        --secondary-color: #a2c515;
    }
</style>